# Environment Configuration Template
# Copy this file to .env and fill in your values

# Server
PORT=8080

# Database (main.go uses these variable names)
DB_HOST=localhost
DB_USER=openwan
DB_PASSWORD=openwan123

# Redis (for session store)
REDIS_ADDR=localhost:6379

# Storage
STORAGE_TYPE=local # local or s3
LOCAL_STORAGE_PATH=./data

# For S3 storage (optional)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_PREFIX=openwan/

# CORS - Additional allowed origins (comma-separated)
ALLOWED_ORIGINS=

# FFmpeg (optional, for transcoding worker)
FFMPEG_PATH=/usr/bin/ffmpeg
FFMPEG_PARAMS=-y -ab 56 -ar 22050 -r 15 -b 500 -s 320x240

# Sphinx Search (optional)
SPHINX_HOST=localhost
SPHINX_PORT=9306

# Message Queue (optional, for worker)
MQ_TYPE=rabbitmq # rabbitmq or sqs
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Logging
LOG_LEVEL=info
GIN_MODE=release # debug or release
